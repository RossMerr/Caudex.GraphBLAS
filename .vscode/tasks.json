{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go Profile",
            "type": "shell",
            "command": "go test -bench=. -cpuprofile=cpu.prof -memprofile=mem.prof",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "Go CPU Profiling",
            "type": "shell",
            "command": "go tool pprof --svg Caudex.GraphBLAS.test cpu.prof > cpu.svg",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}